{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "build/test",
                "test/main.o",
                "*.cpp",
                "-include",
                "test/mocks/arduino.h",
                //"-Ilibraries/AES",
                "-Itest/mocks",
                //"-IC:/Arduino/hardware/arduino/avr/cores/arduino",
                //"-IC:/Arduino/hardware/tools/avr/avr/include",
                //"-IC:/Arduino/hardware/arduino/avr/variants/standard",
                "test/mocks/*.cpp",
                "test/tests/*.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}